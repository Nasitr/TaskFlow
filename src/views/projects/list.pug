extends ../layout

block content
  h1 Projects
  a(href='/projects/create', class='btn btn-primary') New Project
  ul.projects-list
    each project in projects
      li.project-item
        a(href=`/projects/${project.id}`, class='project-link') #{project.name}

  style.
    h1 {
      text-align: center;
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 20px;
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      font-size: 1.1rem;
      background-color: #007bff;
      color: white;
      text-align: center;
      border-radius: 5px;
      text-decoration: none;
      margin-bottom: 20px;
    }

    .btn:hover {
      background-color: #0056b3;
    }

    .projects-list {
      list-style-type: none;
      padding: 0;
    }

    .project-item {
      background-color: #f8f9fa;
      padding: 15px;
      margin: 10px 0;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .project-item:hover {
      background-color: #e2e6ea;
    }

    .project-link {
      font-size: 1.2rem;
      color: #333;
      text-decoration: none;
    }

    .project-link:hover {
      color: #007bff;
      text-decoration: underline;
    }
